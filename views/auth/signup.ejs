<%- include('../includes/header.ejs') %>
<form class="signup-form" action="/signup" method="post" novalidate>
    <%- include('../includes/error-messges.ejs') %>
    <div class="form-group">
        <label for="title">邮箱地址</label>
        <input
            type="email"
            class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'is-invalid' : ''%>"
            name="email"
            aria-describedby="emaileHelp"
            required
            value="<%=oldInput.email%>"
        />
        <small id="emaileHelp" class="form-text text-muted">请输入邮箱地址</small>
    </div>

    <div class="form-group">
        <label for="password">用户密码</label>
        <input
            type="password"
            class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'is-invalid' : ''%>"
            name="password"
            aria-describedby="passwordHelp"
            value="<%=oldInput.password%>"
        />
        <small id="passwordHelp" class="form-text text-muted">请输入用户密码</small>
    </div>

    <div class="form-group">
        <label for="confirmPassword">确认密码</label>
        <input
            type="password"
            class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'is-invalid' : ''%>"
            name="confirmPassword"
            aria-describedby="confirmPasswordHelp"
            value="<%=oldInput.confirmPassword%>"
        />
        <small id="confirmPasswordHelp" class="form-text text-muted">请再次输入密码</small>
    </div>
    <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
    <button type="submit" class="btn btn-primary">注册</button>
</form>
<script>
    console.log(document.cookie);
</script>
<%- include('../includes/footer.ejs') %>
