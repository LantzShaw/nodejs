<%- include('../includes/header.ejs') %>
<form class="login-form" action="/login" method="post" novalidate>
    <%- include('../includes/error-messges.ejs') %>
    <div class="form-group">
        <label for="title">邮箱地址</label>
        <input
            type="email"
            class="form-control <%=validationErrors.find(e => e.param === 'email') ? 'is-invalid' : ''%>"
            name="email"
            aria-describedby="emaileHelp"
            value="<%=oldInput.email%>"
        />
        <small id="emaileHelp" class="form-text text-muted">请输入邮箱地址</small>
    </div>

    <div class="form-group">
        <label for="imageUrl">用户密码</label>
        <input
            type="password"
            class="form-control <%=validationErrors.find(e => e.param === 'password') ? 'is-invalid' : ''%>"
            name="password"
            aria-describedby="passwordHelp"
            value="<%=oldInput.password%>"
        />
        <small id="passwordHelp" class="form-text text-muted">请输入用户密码</small>
    </div>
    <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
    <button type="submit" class="btn btn-primary">登录</button>
    <a href="/reset" class="btn btn-secondary">修改密码</a>
</form>
<script>
    console.log(document.cookie);
</script>
<%- include('../includes/footer.ejs') %>
